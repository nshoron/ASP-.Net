
@{
    ViewBag.Title = "ProductCreate";
}

<h2>ProductCreate</h2>
<form method="post">

    <input type="text" name="Name" value="@Model.Name" placeholder="Name" class="form-control" />
    <input type="text" name="Price" value="@Model.Price" placeholder="Price" class="form-control" />
    <input type="text" name="Qty" value="@Model.Qty" placeholder="Quantity" class="form-control" />
    <select id="Catagory" name="C_Id">
        <option selected disabled> Select Catagory</option>
        @foreach (var item in ViewBag.Catagories)
        {
            <option value="@item.Id"> @item.Name </option>
        }




    </select>

    <input type="submit" class="btn btn-primary" /> Add Products







</form>

