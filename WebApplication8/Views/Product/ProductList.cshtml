
@{
    ViewBag.Title = "ProductList";
}
@if(TempData["Mgs"] != null)
{
    <p class="alert-success" >Product Added Succesfully</p>
}

<h2>ProductList</h2>
<table class="table-bordered">
    <tr>
        <td>Name</td>
        <td>Price</td>
        <td>Quantity</td>
        <td>Catagory</td>


    </tr>
    @foreach(var item in Model)
            {
<tr>
    <td> @item.Name</td>
    <td> @item.Price</td>
    <td> @item.Qty</td>
    <td>@item.Catagory.Name</td>
    <td>
        <a href="@Url.Action("Delete", "Product", new { id = item.Id })"
           class="btn btn-danger btn-sm"
           onclick="return confirm('Are you sure you want to delete this product?');">
            Delete
        </a>
    </td>
    <td>
        <a href="@Url.Action("Edit", "Product", new { id = item.Id })"
           class="btn btn-success"
           onclick="return confirm('Are you sure you want to edit this product details?');">
            Edit
        </a>
    </td>
</tr>   
            }
  



</table>

